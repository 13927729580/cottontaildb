<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false">

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <appender name="lshfile" class="org.apache.log4j.FileAppender">
      <param name="File" value="lsh_index.log" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <appender name="vafile" class="org.apache.log4j.FileAppender">
    <param name="File" value="vaf_index.log" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <appender name="pq" class="org.apache.log4j.FileAppender">
    <param name="File" value="pq_index.log" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <appender name="random" class="org.apache.log4j.FileAppender">
    <param name="File" value="random_index.log"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
        value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n"/>
    </layout>
  </appender>

  <!-- Special log levels for certain classes. -->
  <logger name="org.vitrivr.cottontail.server.grpc.services.DQLService">
    <level value="DEBUG"/>
  </logger>

  <!-- Root logger for Cottontail DB -->
  <root>
    <level value="INFO"/>
    <appender-ref ref="console"/>
  </root>
</log4j:configuration>