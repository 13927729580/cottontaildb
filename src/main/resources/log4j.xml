<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false">

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <appender name="lshfile" class="org.apache.log4j.FileAppender">
      <param name="File" value="lsh_index.log" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <appender name="vafile" class="org.apache.log4j.FileAppender">
    <param name="File" value="vaf_index.log" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5p %c{1}:%L - %m%n" />
    </layout>
  </appender>

  <!-- Logger for Cottontail DB -->
<!--  <logger name="org.vitrivr.cottontail">-->
<!--    <level value="OFF"/>-->
<!--  </logger>-->
    
  <logger name="org.vitrivr.cottontail.database.index.lsh.superbit.SuperBitLSHIndex">
    <level value="TRACE" />
    <appender-ref ref="lshfile"/>
  </logger>

  <logger name="org.vitrivr.cottontail.database.index.lsh.superbit.NonBucketingSuperBitLSHIndex">
    <level value="TRACE" />
    <appender-ref ref="lshfile"/>
  </logger>

  <logger name="org.vitrivr.cottontail.database.index.va.VAFIndex">
    <level value="TRACE" />
    <appender-ref ref="vafile"/>
  </logger>

  <logger name="org.vitrivr.cottontail.database.index.pq.clustering.KMeansClustererComplex">
    <level value="TRACE" />
  </logger>

  <!-- Root logger for Cottontail DB -->
  <root>
    <level value="INFO"/>
    <appender-ref ref="console" />
  </root>
</log4j:configuration>